---
import Hero from '@/components/home/Hero.astro';
import Blog from '@/components/home/Blog.astro';
import Layout from '@/layouts/Layout.astro';
import { fetchBlogs } from '../lib/microcms/fetchBlogs';

const blogsResponse = await fetchBlogs({ limit: 3 });
const blogs = blogsResponse.contents;
---

<Layout>
	<Hero/>
	<Blog blogs={blogs} />
</Layout>
